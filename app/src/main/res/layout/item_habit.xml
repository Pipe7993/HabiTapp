<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_habit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:text="MeditaciÃ³n matutina" />

            <TextView
                android:id="@+id/text_habit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textSize="12sp"
                android:textColor="@color/text_grey"
                android:background="@drawable/bg_tag_blue"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_habit_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:text="Meditar 10 minutos cada maÃ±ana" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/text_habit_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diario"
                android:textSize="13sp"
                android:textColor="@color/text_grey" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_habit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:progress="85"
            android:progressTint="@color/purple_700"
            android:progressBackgroundTint="@color/progress_bg" />

        <TextView
            android:id="@+id/text_habit_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textSize="12sp"
            android:textColor="@color/text_grey"
            android:layout_gravity="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
